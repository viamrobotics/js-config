{
  "name": "@viamrobotics/eslint-config",
  "publishConfig": {
    "access": "public"
  },
  "version": "0.1.0",
  "description": "Common ESLint configuration for Viam projects.",
  "files": [
    "**/*",
    "!tsconfig.json"
  ],
  "types": "./base.d.cts",
  "exports": {
    ".": {
      "types": "./dist/base.d.cts",
      "default": "./base.cjs"
    },
    "./svelte": {
      "types": "./dist/svelte.d.cts",
      "default": "./svelte.cjs"
    }
  },
  "scripts": {
    "build": "tsc"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/viamrobotics/js-config.git",
    "directory": "packages/eslint-config"
  },
  "keywords": [
    "eslint",
    "eslintconfig"
  ],
  "license": "Apache-2.0",
  "peerDependencies": {
    "@typescript-eslint/eslint-plugin": ">=5 <6",
    "@typescript-eslint/parser": ">=5 <6",
    "eslint": ">=8 <9",
    "eslint-config-prettier": ">=8 <9",
    "eslint-plugin-sonarjs": ">=0.19 <0.20",
    "eslint-plugin-svelte": ">=2 <3",
    "eslint-plugin-tailwindcss": ">=3 <4",
    "eslint-plugin-unicorn": ">=46 <47"
  },
  "peerDependenciesMeta": {
    "eslint-plugin-svelte": {
      "optional": true
    },
    "eslint-plugin-tailwindcss": {
      "optional": true
    }
  }
}
