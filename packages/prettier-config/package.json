{
  "name": "@viamrobotics/prettier-config",
  "publishConfig": {
    "access": "public"
  },
  "version": "0.2.0",
  "description": "Common Prettier configuration for Viam projects.",
  "type": "module",
  "files": [
    "**/*",
    "!tsconfig.json"
  ],
  "types": "./dist/base.d.cts",
  "exports": {
    ".": {
      "types": "./dist/base.d.ts",
      "default": "./base.js"
    },
    "./svelte": {
      "types": "./dist/svelte.d.ts",
      "default": "./svelte.js"
    }
  },
  "scripts": {
    "build": "tsc"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/viamrobotics/js-config.git",
    "directory": "packages/prettier-config"
  },
  "keywords": [
    "prettier",
    "prettierconfig"
  ],
  "license": "Apache-2.0",
  "peerDependencies": {
    "prettier": ">=3 <4",
    "prettier-plugin-svelte": ">=3 <4",
    "prettier-plugin-tailwindcss": ">=0.4.0 <0.5"
  },
  "peerDependenciesMeta": {
    "prettier-plugin-svelte": {
      "optional": true
    },
    "prettier-plugin-tailwindcss": {
      "optional": true
    }
  }
}
